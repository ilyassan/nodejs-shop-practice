
<%- include("parts/header") %>
<%- include("parts/navbar") %>


<div class="container text-center">
    <h1 class="mt-4 text-dark">Login</h1>
    <form action="/login" method="POST">

        <div class="form-group m-4">
            <input type="text" class="form-control" name="email"  id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-mail">
            <% let emailError = validationErrors.find(err => err.path == "email") %>
            <% if(emailError){ %>
              <p class="alert alert-danger p-1 mt-2"><%= emailError.msg %></p>
                  <% } %>
        </div>

        <div class="form-group m-4">
          <input type="password" class="form-control" name="password"  id="exampleInputPassword1" placeholder="Password">
          <% let passwordError = validationErrors.find(err => err.path == "password") %>
          <% if(passwordError){ %>
            <p class="alert alert-danger p-1 mt-2"><%= passwordError.msg %></p>
                <% } %>
        </div>

        <input type="submit" class="btn btn-primary mb-3" value="Login">
        <% if(authError){ %>
          <p class="alert alert-danger p-1 mt-2"><%= authError %></p>
        <% } %>
    
      </form>

      <small>Don't Have Account ? <a href="/signup" class="font-weight-bold text-decoration-none">Create Account</a></small>
</div>


<%- include("parts/footer") %>
