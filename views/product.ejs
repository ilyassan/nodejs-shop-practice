<%- include("parts/header") %>
<%- include("parts/navbar") %>



<% if(!product){ %>

    <div class="alert alert-danger">
        there is no product matches
      </div>

<% }else{ %>

    <div class="container mt-4">
        <% if(validationError){ %>
            <p class="alert alert-danger"><%= validationError.msg %></p>
            <% } %>
        <div class="row">
            <div class="col col-12 col-md-6 text-center">
                    <img src="/<%= product.image %>" class="img-thumbnail" alt="">
                        <form action="/cart" class="text-center my-3" method="POST">
                            <input type="number" name="amount" class="form-control">
                            <input type="submit" value="Add To Card" class="btn btn-primary m-2">
                            <input type="hidden" name="name" value="<%= product.name %>">
                            <input type="hidden" name="price" value="<%= product.price %>">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <input type="hidden" name="redirectTo" value="/product/<%= product._id %>">
                        </form>
            </div>
            <div class="col col-12 col-md-6">
                    <h3><%= product.name %></h3>
                    <h5>Price: <%= product.price %> $</h5>
                    <p><%= product.description %></p>
            </div>
        </div>
    </div>

    <% } %>



<%- include("parts/footer") %>