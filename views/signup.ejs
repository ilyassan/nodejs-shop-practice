
<%- include("parts/header") %>
<%- include("parts/navbar") %>


<div class="container text-center">
    <h1 class="mt-4 text-dark">Create Account</h1>
    <form action="/signup" method="POST">

        <div class="form-group m-4">
          <input type="text" class="form-control" name="username" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Username">
          <% let usernameError = validationErrors.find(err => err.path == "username") %>
          <% if(usernameError){ %>
        <p class="alert alert-danger p-1 mt-2"><%= usernameError.msg %></p>
            <% } %>
        </div>

        <div class="form-group m-4">
            <input type="text" class="form-control" name="email"  id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-mail">
            <% let emailError = validationErrors.find(err => err.path == "email") %>
          <% if(emailError){ %>
        <p class="alert alert-danger p-1 mt-2"><%= emailError.msg %></p>
            <% } %>
          </div>

        <div class="form-group m-4">
          <input type="password" class="form-control" name="password"  id="exampleInputPassword1" placeholder="Password">
          <% let passwordError = validationErrors.find(err => err.path == "password") %>
          <% if(passwordError){ %>
        <p class="alert alert-danger p-1 mt-2"><%= passwordError.msg %></p>
            <% } %>
        </div>

        <div class="form-group m-4">
          <input type="password" class="form-control" name="confirmPassword"  id="exampleInputPassword1" placeholder="Confirm Password">
          <% let confirmPasswordError = validationErrors.find(err => err.path == "confirmPassword") %>
          <% if(confirmPasswordError){ %>
        <p class="alert alert-danger p-1 mt-2"><%= confirmPasswordError.msg %></p>
            <% } %>
        </div>
    
        <input type="submit" class="btn btn-primary mb-3" value="Create Account">

      </form>

      <small>Already Have Account ? <a href="/login" class="font-weight-bold text-decoration-none">Login</a></small>
</div>


<%- include("parts/footer") %>
